{% extends '::base.html.twig' %}
{% block title %}Delete Category{% endblock %}
{% block content %}
<div class="content-wrapper">
    <h1><a href="{{ path('admin_project_index') }}">Projects</a> > Delete > {{project.title}}</h1>
    
    <div class="category">
        <div class="category-title">{{project.title}}</div>
        <div class="category-subtitle">{{project.subtitle}}</div>
    </div>
    
    <form class='delete' action="{{ path('admin_project_delete', {'slug' : project.slug}) }}" method="post">
        {{ form_widget(form) }}
        Are you sure you want to delete "{{project.title}}" category?
        <input type="hidden" name="_method" value="delete" />
        <p><button type="submit">Yes</button><a href="{{ path('admin_project_index') }}"><button type="button">No</button></a></p>
    </form>
</div>
{% endblock %}