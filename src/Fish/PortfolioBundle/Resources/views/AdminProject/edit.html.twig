{% extends '::base.html.twig' %}
{% block title %}Edit Project{% endblock %}
{% block content %}
<div class="content-wrapper">
    <h1><a href="{{ path('admin_project_index') }}">Projects</a> > Edit > {{project.title}}</h1>
    
    <script>
        $(document).ready(function () {
            $("textarea").tabby();
        });
    </script>
    <form action="{{ path('admin_project_edit', {'slug' : project.slug}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p><button type="submit">Update</button></p>
    </form>
</div>
{% endblock %}