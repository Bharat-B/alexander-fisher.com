{% extends '::base.html.twig' %}
{% block title %}Delete Category{% endblock %}
{% block content %}
<div class="content-wrapper">
    <h1><a href="{{ path('admin_category_index') }}">Categories</a> > Delete > {{category.title}}</h1>
    
    <div class="category">
        <div class="category-title">{{category.title}}</div>
        <div class="category-subtitle">{{category.subtitle}}</div>
        <div class="category-description">{{category.description}}</div>
    </div>
    
    <form class='delete' action="{{ path('admin_category_delete', {'slug' : category.slug}) }}" method="post">
        {{ form_widget(form) }}
        Are you sure you want to delete "{{category.title}}" category?
        <input type="hidden" name="_method" value="delete" />
        <p><button type="submit">Yes</button><a href="{{ path('admin_category_index') }}"><button type="button">No</button></a></p>
    </form>
</div>
{% endblock %}